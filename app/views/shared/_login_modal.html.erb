<div class="modal fade" id="oauthLogin" role=”dialog”>
  <div class="modal-dialog modal-sm modal-dialog-center">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class=”modal-title”><%= t(:login) %></h4>
      </div>
      <div class="modal-body">
        <small><%= t(:login_description) %></small>
        <ul class="list-unstyled">
          <li><a href="/auth/twitter" class="btn-twitter btn-block"><%= t(:login_with_twitter) %></a></li>
          <li><a href="/auth/facebook" class="btn-facebook btn-block"><%= t(:login_with_facebook) %></a></li>
        </ul>
      </div>
    </div>
  </div>
</div>
