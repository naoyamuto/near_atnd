<div class="container">
  <div class="page-header">
    <h1><%= t(:update_event) %></h1>
  </div>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <%= form_for(@event) do |f| %>
        <%= render 'shared/error_messages' %>

        <%= f.label t(:title) %>
        <%= f.text_field :title, class: 'form-control' %>

        <%= f.label t(:hold_at) %>
        <%= f.date_field :hold_at, class: 'form-control'%>

        <%= f.label t(:capacity) %>
        <%= f.text_field :capacity, class: 'form-control' %>

        <%= f.label t(:location) %>
        <%= f.text_field :location, class: 'form-control' %>

        <%= f.label t(:owner) %>
        <%= f.text_field :owner, class: 'form-control' %>

        <%= f.label t(:description) %>
        <%= f.text_area :description, :size => "20x7", placeholder: "開催するイベントの内容を詳しく記載してください。", class: 'form-control' %>

        <%= f.submit t(:update_event), class: "btn btn-primary btn-lg" %>
      <% end %>
    </div>
  </div>
</div>
