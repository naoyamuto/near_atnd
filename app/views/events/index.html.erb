<% unless logged_in? %>
<div class="jumbotron">
  <div class="container">
    <h1><%= t(:headings) %></h1>
    <p style="color:white;"><%= t(:sub_desciption) %></p>
    <a href="#" class="btn-login" data-toggle="modal" data-target="#oauthLogin"><%= t(:log_in) %></a>
    <%= render 'shared/login_modal' %>
  </div>
</div>
<% end %>

<div class="container">
  <%= render 'shared/messages' %>
  <div class="page-header">
    <h1><%= t(:event_lists) %></h1>
  </div>
  <div class="row">
    <div class="col-md-12">
    <% @events.each do |event| %>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title"><%= link_to event.title, event_path(event) %></h3>
        </div>
        <ul class="list-group">
          <li class="list-group-item"><%= t(:hold_at) %>：<%= event.hold_at %></li>
          <li class="list-group-item"><%= t(:capacity) %>：<%= event.capacity %>人</li>
          <li class="list-group-item"><%= t(:location) %>：<%= event.location %></li>
          <li class="list-group-item"><%= link_to t(:show_detail), event_path(event)  %></li>
        </ul>
      </div>
    <% end %>
    </div>
  </div>
</div>
