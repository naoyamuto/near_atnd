<header class="navbar navbar-fixed-top navbar-inverse">
   <div class="container">
     <%= link_to "Attendly", root_path, id: "logo" %>
     <nav>
       <ul class="nav navbar-nav navbar-right">
         <% if logged_in? %>
         <li><%= link_to t(:profile), current_user %></li>
         <li><%= link_to t(:create_event), new_event_path %></li>
         <li><%= link_to t(:log_out), logout_path, method: :delete %></li>
         <% else %>
         <li><%= link_to t(:login_with_twitter), "/auth/twitter" %></li>
         <li><%= link_to t(:login_with_facebook), "/auth/facebook" %></li>
         <li class="dropdown">
           <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t(:language) %> <b class="caret"></b>
           </a>
           <ul class="dropdown-menu">
             <li>
                <% I18n.available_locales.reject{|l| l == I18n.locale}.each do |locale| %>
                  <%= link_to(locale, i18n_url_for(params.merge(locale: locale))) %>
                <% end %>
             </li>
           </ul>
         </li>
         <% end %>
       </ul>
     </nav>
   </div>
 </header>
